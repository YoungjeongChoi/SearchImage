<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="30dp">

    <ImageView
        android:id="@+id/iv_item_image"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_no_image"
        android:scaleType="fitXY"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/user_name"
        android:textSize="14sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@+id/iv_item_image"
        app:layout_constraintEnd_toStartOf="@+id/iv_item_favorite"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_image" />

    <TextView
        android:id="@+id/tv_item_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="24.01.30 04:30"
        android:textSize="14sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_item_title"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_favorite"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_title" />


    <ImageView
        android:id="@+id/iv_item_favorite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_favorite"

        app:layout_constraintTop_toBottomOf="@+id/iv_item_image"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_image"
        />


</androidx.constraintlayout.widget.ConstraintLayout>